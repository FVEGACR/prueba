<?xml version='1.0' encoding='utf-8'?>
<plugin id="facephi-plugin-user-control" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>UCFacephi</name>	
	<dependency id="cordova-plugin-compat" version="^1.0.0" />
  <description>Facephi User Control Plugin for Cordova</description>
  <license>Apache 2.0</license>
  <keywords>cordova,facephi,user control,android,ios</keywords>

  <js-module src="www/UCConfig.js"  name="UCConfig">
    <clobbers target="facephi.sdk.config" />
  </js-module>
  <js-module src="www/UCLivenessDiagnostic.js"  name="UCLivenessDiagnostic">
    <clobbers target="facephi.sdk.liveness" />
  </js-module>
  <js-module src="www/UCErrorType.js"  name="UCErrorType">
    <clobbers target="facephi.sdk.error" />
  </js-module>
  <js-module src="www/UCFinishStatus.js"  name="UCFinishStatus">
    <clobbers target="facephi.sdk.finish" />
  </js-module>
  <js-module src="www/UCMode.js"  name="UCMode">
    <clobbers target="facephi.sdk.mode" />
  </js-module>
  <js-module src="www/UCResult.js"  name="UCResult">
    <clobbers target="facephi.sdk.result" />
  </js-module>
  <js-module src="www/UCUtils.js"  name="UCUtils">
    <clobbers target="facephi.sdk.utils" />
  </js-module>
  <js-module src="www/UCFacephi.js"  name="UCFacephi">
    <clobbers target="facephi.sdk.universal" />
  </js-module>
  
	
	<platform name="android">
		<config-file parent="/*" target="config.xml">
			<feature name="UCFacephi">
				<param name="android-package" value="facephi.plugin.usercontrol.UCFacephi" />
				<param name="onload" value="true" />
			</feature>
		</config-file>
		
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.CAMERA" />
      <uses-feature android:name="android.hardware.camera" />
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    </config-file>
	 <config-file target="AndroidManifest.xml" parent="/manifest/application">
    	  <activity android:name="com.facephi.sdk.ui.FPhiUserControlAndroid" android:label="UserControlAndroid"
            android:screenOrientation="portrait"
            android:configChanges="orientation" />
        <activity android:name="com.facephi.sdk.ui.FPhiUserControlPermission" android:label="UserControlPermission"
            android:screenOrientation="portrait"
            android:configChanges="orientation" />
     </config-file> 
    <source-file src="src/android/OutputBundle.java" target-dir="src/facephi/plugin/usercontrol" />
    <source-file src="src/android/UCFacephi.java" target-dir="src/facephi/plugin/usercontrol" />
		<framework custom="true" src="src/android/build.gradle" type="gradleReference" />
		<resource-file src="src/android/aar/FPhi.UserControl.aar" target="aar/FPhi.UserControl.aar" />
	</platform>
	
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="UCFacephi">
                <param name="ios-package" value="UCFacephi" />
            </feature>
        </config-file>
        
        <framework src="QuartzCore.framework" />
        <framework src="UIKit.framework" />
        <framework src="GLKit.framework" />
        <framework src="CoreMotion.framework" />
        <framework src="libc++.dylib" />
        <framework src="Foundation.framework" />
        
        <resource-file src="FPhiUCiosResources.bundle" />
        <framework src="FPhi.Extractor.ios.framework" custom="true"/>
        <framework src="FPhiUCios.framework" custom="true"/>
        
        <source-file src="UCFacephi.m" />
    </platform>
</plugin>